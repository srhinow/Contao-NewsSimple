  "type": "contao-module",
  "homepage": "https://github.com/felixpfeiffer/Contao-NewsSimple",
  "license": "LGPL",
  "authors":[
    {
      "name":"Felix Pfeiffer : Neue Medien",
      "homepage":"http://www.felixpfeiffer.de",
      "role":"Developer"
